{
  "name": "moremoney",
  "version": "1.0.0",
  "description": "Core contracts for the Moremoney protocol",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint --ext .ts --fix deploy/ ; eslint --ext .ts --fix hardhat.config.ts ; prettier -w contracts/*.sol; prettier -w interfaces/*.sol; prettier --write contracts/**/*.sol;",
    "dev": "hardhat node",
    "solmerge": "sol-merger --export-plugin SPDXLicenseRemovePlugin \"./contracts/*.sol\" ./flattened",
    "push-build": "cp -r build/* ../frontend/src/contracts/",
    "start": "hardhat node",
    "compile": "hardhat compile",
    "deploy-avax": "hardhat deploy --network avalanche --tags base,avalanche ; hardhat export-addresses --network avalanche ; hardhat custom-etherscan --network avalanche",
    "export-addresses": "hardhat export-addresses --network avalanche"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@chainlink/contracts": "^0.2.1",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/units": "^5.5.0",
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@openzeppelin/contracts": "^4.4.0",
    "@truffle/hdwallet-provider": "1.2.1",
    "@uniswap/v2-core": "^1.0.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "hardhat-ethernal": "^0.3.2",
    "ncp": "^2.0.0",
    "node-fetch": "2",
    "sol-merger": "^3.1.0"
  },
  "devDependencies": {
    "@ethersproject/address": "^5.5.0",
    "@ethersproject/solidity": "^5.5.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@types/chai": "^4.2.15",
    "@types/mocha": "^8.2.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chai": "^4.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "ethereum-waffle": "^3.2.2",
    "ethers": "^5.5.0",
    "hardhat": "2.6.8",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.14",
    "hardhat-deploy-ethers": "^0.3.0-beta.11",
    "prettier": "^2.2.1",
    "prettier-plugin-solidity": "^1.0.0-beta.7",
    "solc": "0.8.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  }
}
